= simple_form_for([:admin, model]) do |f|
  = f.error_notification

  .form-inputs
    = f.input :segment, collection: segments_collection, prompt: false
    = f.input :notificable_type, collection: types_collection, prompt: 'Text'
    = f.input :notificable_id
    = f.input :title
    = f.input :message, input_html: { rows: 5, cols: 100 }
    = f.input :icon_url
    = f.input :image_url
    = f.input :response, input_html: { rows: 5, cols: 100 }

  .form-actions
    = f.button :submit
    = link_to 'Delete', [:admin, model], data: { confirm: 'Are you sure?' }, method: :delete
